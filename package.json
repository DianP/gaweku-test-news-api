{
  "name": "news-api",
  "version": "0.1.0",
  "description": "News API Express",
  "author": {
    "name": "Dian Pratama",
    "email": "me@diantama.dev"
  },
  "private": true,
  "scripts": {
    "build": "npm run lint && npm run build:clean && npm run build:compile",
    "build:clean": "rimraf ./dist",
    "build:compile": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json --outDir ./dist",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec \"ts-node -r tsconfig-paths/register\" src/server.ts",
    "lint": "eslint src/**/*.{ts,css,js,html}",
    "lint:fix": "eslint --fix --ext src/**/*.ts",
    "code:format": "prettier --write src/**/*.ts",
    "code:check": "prettier --check src/**/*.ts",
    "code:format:specific-file": "prettier --write "
  },
  "dependencies": {
    "axios": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@swc/core": "^1.3.66",
    "@swc/helpers": "^0.5.1",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.4",
    "prettier-eslint": "^15.0.1",
    "regenerator-runtime": "^0.13.11",
    "rimraf": "^4.4.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  }
}
